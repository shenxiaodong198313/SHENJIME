<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E8E8E8"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <!-- 键盘顶部额外边距 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="visible" />

    <!-- 键盘布局区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <!-- 符号键盘主要内容区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:orientation="vertical"
            android:id="@+id/symbol_content_area">
            
            <!-- 第一行符号按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:id="@+id/symbol_row_1">
                
                <Button android:id="@+id/symbol_btn_1_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="-"/>
                <Button android:id="@+id/symbol_btn_1_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="_"/>
                <Button android:id="@+id/symbol_btn_1_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text=";"/>
                <Button android:id="@+id/symbol_btn_1_4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="|"/>
                <Button android:id="@+id/symbol_btn_1_5" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="%"/>
                <Button android:id="@+id/symbol_btn_1_6" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="+"/>
                <Button android:id="@+id/symbol_btn_1_7" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="-"/>
                <Button android:id="@+id/symbol_btn_1_8" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="×"/>
                <Button android:id="@+id/symbol_btn_1_9" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="÷"/>
                <Button android:id="@+id/symbol_btn_1_10" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="="/>
            </LinearLayout>
            
            <!-- 第二行符号按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal"
                android:id="@+id/symbol_row_2">
                
                <Button android:id="@+id/symbol_btn_2_1" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="("/>
                <Button android:id="@+id/symbol_btn_2_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text=")"/>
                <Button android:id="@+id/symbol_btn_2_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="{"/>
                <Button android:id="@+id/symbol_btn_2_4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="}"/>
                <Button android:id="@+id/symbol_btn_2_5" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="《"/>
                <Button android:id="@+id/symbol_btn_2_6" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="》"/>
                <Button android:id="@+id/symbol_btn_2_7" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="#"/>
                <Button android:id="@+id/symbol_btn_2_8" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="$"/>
                <Button android:id="@+id/symbol_btn_2_9" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="&amp;"/>
                <Button android:id="@+id/symbol_btn_2_10" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="."/>
            </LinearLayout>
            
            <!-- 第三行符号按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:orientation="horizontal"
                android:id="@+id/symbol_row_3">
                
                <Button 
                    android:id="@+id/symbol_abc_btn" 
                    android:layout_width="0dp" 
                    android:layout_height="match_parent" 
                    style="@style/KeyboardSpecialButton" 
                    android:text="ABC" 
                    android:layout_weight="1.2"/>
                <Button android:id="@+id/symbol_btn_3_2" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="Γ"/>
                <Button android:id="@+id/symbol_btn_3_3" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="["/>
                <Button android:id="@+id/symbol_btn_3_4" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="&lt;"/>
                <Button android:id="@+id/symbol_btn_3_5" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="&gt;"/>
                <Button android:id="@+id/symbol_btn_3_6" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="]"/>
                <Button android:id="@+id/symbol_btn_3_7" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="^"/>
                <Button android:id="@+id/symbol_btn_3_8" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" style="@style/KeyboardButton" android:text="*"/>
                
                <Button
                    android:id="@+id/symbol_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    style="@style/KeyboardSpecialButton"
                    android:drawableTop="@drawable/ic_backspace"
                    android:text=""
                    android:paddingTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 底部导航区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="#D0D0D0"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <!-- 返回按钮 -->
            <Button
                android:id="@+id/symbol_back_btn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="返回"
                android:textSize="11sp"
                android:textColor="#333333"
                android:background="@drawable/keyboard_special_key_bg"
                android:layout_marginEnd="8dp"/>

            <!-- 可滑动的符号类别切换区域 -->
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scrollbars="none"
                android:fadingEdge="horizontal"
                android:fadingEdgeLength="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/nav_chinese"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="中文"
                        android:textSize="11sp"
                        android:textColor="#2196F3"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:id="@+id/nav_english"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="英文"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:id="@+id/nav_brackets"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="括号"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:id="@+id/nav_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="货币"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:id="@+id/nav_math"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="数学"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:id="@+id/nav_chinese_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="中数"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:id="@+id/nav_circle_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="圆数"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@android:color/transparent"/>

                    <TextView
                        android:id="@+id/nav_superscript"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="角标"
                        android:textSize="11sp"
                        android:textColor="#666666"
                        android:gravity="center"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@android:color/transparent"/>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout> 