<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="验证码自动填写测试"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:text="加载状态中..." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试输入框:"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/test_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="验证码将自动填写到这里"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/request_permission_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请求短信权限"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/accessibility_settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开无障碍服务设置"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/simulate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="模拟收到验证码"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="清除输入框"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用说明:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. 授予短信读取权限\n2. 启用无障碍服务\n3. 收到验证码短信后，将自动提取并填入输入框\n4. 如果当前页面有其他输入框也会自动填入\n5. 可使用模拟按钮测试功能是否正常"
            android:layout_marginBottom="16dp" />

    </LinearLayout>
</ScrollView> 