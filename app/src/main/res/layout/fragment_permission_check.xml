<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="权限检查"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/permission_status_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="16dp"
            android:background="#F0F0F0"
            android:padding="12dp"
            android:text="正在检查权限状态..." />

        <Button
            android:id="@+id/check_all_permissions_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="重新检查权限状态"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="权限管理"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/request_storage_permission_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请求存储权限"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/request_sms_permission_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请求短信权限"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/accessibility_settings_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开无障碍服务设置"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="权限说明:"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="存储权限：用于日志写入和词典存储\n短信权限：用于验证码自动填写功能\n无障碍服务：用于验证码自动填写功能"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView> 