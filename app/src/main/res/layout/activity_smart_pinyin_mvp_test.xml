<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SmartPinyinMvpTestActivity">

    <!-- 顶部工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:title="MVP引擎测试" />

    <!-- 主内容区域 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 生成随机测试用例按钮 -->
            <Button
                android:id="@+id/generateTestButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🎲 生成随机测试用例"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.Button" />

            <!-- 按拼音长度测试按钮区域 -->
            <LinearLayout
                android:id="@+id/lengthTestContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- 第一行按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/lengthTest1to2Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="长度1~2"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/lengthTest1to3Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="长度1~3"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/lengthTest1to4Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="长度1~4"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

                <!-- 第二行按钮 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/lengthTest1to5Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="长度1~5"
                        android:textSize="12sp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/lengthTest1to6Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="长度1~6"
                        android:textSize="12sp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <!-- 占位View -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 候选词结果 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎯 候选词结果"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/candidatesTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="候选词结果将在这里显示..."
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:background="@color/light_gray"
                        android:padding="12dp"
                        android:minHeight="120dp"
                        android:gravity="top" />

                    <Button
                        android:id="@+id/loadMoreButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📄 查看更多候选词"
                        android:layout_marginTop="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 查询分析 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🔍 查询分析"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/analysisTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="查询分析将在这里显示..."
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:background="@color/light_gray"
                        android:padding="12dp"
                        android:minHeight="200dp"
                        android:gravity="top" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 