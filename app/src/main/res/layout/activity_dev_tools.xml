<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/devToolsContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DevToolsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="开发工具" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="开发工具"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/mainButtonContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle">

                <Button
                    android:id="@+id/btnTestPinyin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="拼音分词测试" />
                    
                <Button
                    android:id="@+id/btnPinyinSegmenterTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="拼音分词优化测试" />
                    
                <Button
                    android:id="@+id/btnPinyinTestTool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="拼音输入法测试工具" />

                <Button
                    android:id="@+id/btnBuildRealmDb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="构建Realm实例" />

                <Button
                    android:id="@+id/btnExportDb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="导出数据库" />
                    
                <Button
                    android:id="@+id/btnExportToPublic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="存储到外部目录" />
                
                <Button
                    android:id="@+id/btnShowDbDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="查看数据库详情" />
                
                <Button
                    android:id="@+id/btnResetBuild"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="重置并重新构建"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- 数据库信息区域 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDbInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mainButtonContainer"
                app:layout_constraintVertical_bias="0.0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvDbInfoTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="数据库信息"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDbVersion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Realm版本: 2.3.0"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvDbPath"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="路径: ..."
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvDbSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="大小: 0MB"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvDbStructure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="结构: Entry(word, pinyin, frequency, type, initialLetters)"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvDbStats"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="统计信息: 正在加载..."
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/tvDbBuildTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="构建用时: 未知"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <Button
                            android:id="@+id/btnCopyDbInfo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="复制信息" />

                        <Button
                            android:id="@+id/btnCopyDbPath"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="复制路径" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/pbDictExport"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="32dp"
                android:max="100"
                android:progress="0"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardDbInfo" />

            <TextView
                android:id="@+id/tvDictStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pbDictExport" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 