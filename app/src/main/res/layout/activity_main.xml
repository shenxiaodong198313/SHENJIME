<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/splash_background_color"
    android:gravity="center"
    android:padding="32dp">

    <!-- 顶部图标 -->
    <ImageView
        android:id="@+id/appIconTop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="48dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="应用图标" />

    <!-- 应用标题 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="神迹AI键盘"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="48dp" />

    <!-- 按钮容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- 输入法设置按钮容器 -->
        <FrameLayout
            android:id="@+id/inputMethodSettingsButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- 日志详情按钮容器 -->
        <FrameLayout
            android:id="@+id/logDetailButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- 候选词引擎测试按钮容器 -->
        <FrameLayout
            android:id="@+id/optimizedCandidateTestButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- AI功能测试按钮容器 -->
        <FrameLayout
            android:id="@+id/aiTestButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- MNN推理按钮容器 -->
        <FrameLayout
            android:id="@+id/mnnInferenceButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Gemma-3n按钮容器 -->
        <FrameLayout
            android:id="@+id/gemma3nButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</LinearLayout>