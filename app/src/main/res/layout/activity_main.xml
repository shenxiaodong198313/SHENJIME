<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background_color"
    android:padding="32dp"
    tools:context=".ui.MainActivity">

    <!-- 左上角应用名称 -->
    <TextView
        android:id="@+id/appNameTopLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="神迹"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/splash_text_color"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <!-- 顶部应用图标 - 启动主题卡通图的三分之一大小 -->
    <ImageView
        android:id="@+id/appIconTop"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:src="@android:color/transparent"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <!-- 主要按钮容器 -->
    <LinearLayout
        android:id="@+id/mainButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appIconTop"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <!-- 输入法设置按钮 -->
        <FrameLayout
            android:id="@+id/btnImeSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
        </FrameLayout>

        <!-- 查看日志按钮 -->
        <FrameLayout
            android:id="@+id/btnLogsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
        </FrameLayout>

        <!-- 候选词引擎测试按钮 -->
        <FrameLayout
            android:id="@+id/btnOptimizedTestContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
        </FrameLayout>

        <!-- LLM大模型测试按钮 -->
        <FrameLayout
            android:id="@+id/btnLLMTestContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>

    </LinearLayout>

</RelativeLayout> 