<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <Button
        android:id="@+id/btnRebuildRealm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="重构Realm数据"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvRebuildRealmDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="根据当前最新的数据库结构，将YAML词典重新导入到Realm数据库"
        android:textSize="12sp"
        android:textColor="#757575"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnRebuildRealm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvRebuildRealmDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnExportRealm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="导出Realm实例"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvExportRealmDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="将当前数据库结构和数据导出成Realm实例，自动保存到设备下载目录"
        android:textSize="12sp"
        android:textColor="#757575"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnExportRealm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvExportRealmDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBuildTrie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="构建双Trie数据"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvBuildTrieDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="构建双Trie树结构数据，用于提高输入法搜索性能（功能开发中）"
        android:textSize="12sp"
        android:textColor="#757575"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/btnBuildTrie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout> 