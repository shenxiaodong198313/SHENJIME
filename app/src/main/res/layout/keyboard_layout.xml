<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#E8E8E8"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp">

    <!-- 键盘顶部额外边距 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="visible" />

    <!-- 键盘布局区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        
        <!-- 第一行 数字键 1234567890 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/key_1"
                style="@style/KeyboardButton"
                android:text="1"/>

            <Button
                android:id="@+id/key_2"
                style="@style/KeyboardButton"
                android:text="2"/>

            <Button
                android:id="@+id/key_3"
                style="@style/KeyboardButton"
                android:text="3"/>

            <Button
                android:id="@+id/key_4"
                style="@style/KeyboardButton"
                android:text="4"/>

            <Button
                android:id="@+id/key_5"
                style="@style/KeyboardButton"
                android:text="5"/>

            <Button
                android:id="@+id/key_6"
                style="@style/KeyboardButton"
                android:text="6"/>

            <Button
                android:id="@+id/key_7"
                style="@style/KeyboardButton"
                android:text="7"/>

            <Button
                android:id="@+id/key_8"
                style="@style/KeyboardButton"
                android:text="8"/>

            <Button
                android:id="@+id/key_9"
                style="@style/KeyboardButton"
                android:text="9"/>

            <Button
                android:id="@+id/key_0"
                style="@style/KeyboardButton"
                android:text="0"/>
        </LinearLayout>

        <!-- 第二行 QWERTYUIOP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/key_q"
                style="@style/KeyboardButton"
                android:text="Q"/>

            <Button
                android:id="@+id/key_w"
                style="@style/KeyboardButton"
                android:text="W"/>

            <Button
                android:id="@+id/key_e"
                style="@style/KeyboardButton"
                android:text="E"/>

            <Button
                android:id="@+id/key_r"
                style="@style/KeyboardButton"
                android:text="R"/>

            <Button
                android:id="@+id/key_t"
                style="@style/KeyboardButton"
                android:text="T"/>

            <Button
                android:id="@+id/key_y"
                style="@style/KeyboardButton"
                android:text="Y"/>

            <Button
                android:id="@+id/key_u"
                style="@style/KeyboardButton"
                android:text="U"/>

            <Button
                android:id="@+id/key_i"
                style="@style/KeyboardButton"
                android:text="I"/>

            <Button
                android:id="@+id/key_o"
                style="@style/KeyboardButton"
                android:text="O"/>

            <Button
                android:id="@+id/key_p"
                style="@style/KeyboardButton"
                android:text="P"/>
        </LinearLayout>

        <!-- 第三行 ASDFGHJKL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <Button
                android:id="@+id/key_a"
                style="@style/KeyboardButton"
                android:text="A"/>

            <Button
                android:id="@+id/key_s"
                style="@style/KeyboardButton"
                android:text="S"/>

            <Button
                android:id="@+id/key_d"
                style="@style/KeyboardButton"
                android:text="D"/>

            <Button
                android:id="@+id/key_f"
                style="@style/KeyboardButton"
                android:text="F"/>

            <Button
                android:id="@+id/key_g"
                style="@style/KeyboardButton"
                android:text="G"/>

            <Button
                android:id="@+id/key_h"
                style="@style/KeyboardButton"
                android:text="H"/>

            <Button
                android:id="@+id/key_j"
                style="@style/KeyboardButton"
                android:text="J"/>

            <Button
                android:id="@+id/key_k"
                style="@style/KeyboardButton"
                android:text="K"/>

            <Button
                android:id="@+id/key_l"
                style="@style/KeyboardButton"
                android:text="L"/>
        </LinearLayout>

        <!-- 第四行 ZXCVBNM  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/key_shift"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                style="@style/KeyboardSpecialButton"
                android:drawableTop="@drawable/ic_shift_up"
                android:text=""
                android:paddingTop="8dp"/>

            <Button
                android:id="@+id/key_z"
                style="@style/KeyboardButton"
                android:text="Z"/>

            <Button
                android:id="@+id/key_x"
                style="@style/KeyboardButton"
                android:text="X"/>

            <Button
                android:id="@+id/key_c"
                style="@style/KeyboardButton"
                android:text="C"/>

            <Button
                android:id="@+id/key_v"
                style="@style/KeyboardButton"
                android:text="V"/>

            <Button
                android:id="@+id/key_b"
                style="@style/KeyboardButton"
                android:text="B"/>

            <Button
                android:id="@+id/key_n"
                style="@style/KeyboardButton"
                android:text="N"/>

            <Button
                android:id="@+id/key_m"
                style="@style/KeyboardButton"
                android:text="M"/>

            <Button
                android:id="@+id/key_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                style="@style/KeyboardSpecialButton"
                android:drawableTop="@drawable/ic_backspace"
                android:text=""
                android:paddingTop="8dp"/>
        </LinearLayout>

        <!-- 第五行 功能键 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/key_symbol"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                style="@style/KeyboardSpecialButton"
                android:text="符"/>

            <Button
                android:id="@+id/key_split"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/KeyboardSpecialButton"
                android:text="123"/>

            <Button
                android:id="@+id/key_comma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/KeyboardButton"
                android:text=","/>

            <Button
                android:id="@+id/key_space"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                style="@style/KeyboardSpaceButton"
                android:drawableTop="@drawable/ic_mic"
                android:paddingTop="8dp"
                android:text=""/>

            <Button
                android:id="@+id/key_period"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/KeyboardButton"
                android:text="."/>

            <Button
                android:id="@+id/key_lang_switch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                style="@style/KeyboardSpecialButton"
                android:text="中/英"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/key_enter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                style="@style/KeyboardSpecialButton"
                android:text="确定"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout> 