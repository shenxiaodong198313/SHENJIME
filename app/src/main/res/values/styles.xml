<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础键盘按钮样式 -->
    <style name="KeyboardButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/keyboard_key_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/keyboard_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">1dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- 功能键按钮样式 -->
    <style name="KeyboardFunctionButton">
        <item name="android:background">@drawable/keyboard_function_key_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/keyboard_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">1dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- 特殊功能键样式（分词、符号等） -->
    <style name="KeyboardSpecialButton">
        <item name="android:background">@drawable/keyboard_special_key_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/keyboard_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">1dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    
    <!-- 空格键样式 -->
    <style name="KeyboardSpaceButton">
        <item name="android:background">@drawable/keyboard_space_key_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/keyboard_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">1dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- 候选词条样式 -->
    <style name="CandidateWord">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <!-- 候选词按钮样式 -->
    <style name="CandidateButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@null</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:minHeight">32dp</item>
    </style>
    
    <!-- MNN特有的样式资源 -->
    <style name="ShapeAppearance.ChatInput" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="SettingsSectionGroup" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="SettingsSectionHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsRowContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsRowContainerClickable" parent="SettingsRowContainer">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SettingsRowLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="SettingsSubLabel" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SettingsRowClickable" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="SettingsRowValue" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="SettingsRowValueSmall" parent="SettingsRowValue">
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
    </style>

    <style name="SettingsRowChevron">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:src">@drawable/arrow_right</item>
        <item name="android:alpha">0.6</item>
        <item name="android:tint">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">?attr/dividerHorizontal</item>
    </style>

    <style name="FilterChipStyle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_filter_chip</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
    
    <!-- SpinKit样式 -->
    <style name="SpinKitView.Small.Wave" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="SpinKitView.Large.FadingCircle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="SpinKitView.Small.FadingCircle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="SpinKitView.FadingCircle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="Light" parent="android:TextAppearance">
    </style>

    <style name="ExtraLight" parent="android:TextAppearance">
    </style>

    <!-- OverlayToolActivity 主题 -->
    <style name="Theme.OverlayTool" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 透明背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/OverlayToolAnimation</item>
        
        <!-- 全屏显示 -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        
        <!-- 状态栏透明 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <!-- 允许在锁屏上显示 -->
        <item name="android:showWhenLocked">true</item>
        <item name="android:turnScreenOn">false</item>
    </style>
    
    <!-- OverlayToolActivity 动画样式 -->
    <style name="OverlayToolAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_up</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_down</item>
    </style>
</resources> 