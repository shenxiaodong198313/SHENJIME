<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按压状态 -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/keyboard_key_shadow" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
            <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/keyboard_key_pressed" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/keyboard_key_shadow" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
            <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/keyboard_key_normal" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector> 