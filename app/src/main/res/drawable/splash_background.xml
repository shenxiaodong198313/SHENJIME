<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景色 -->
    <item android:drawable="@color/splash_background_color" />
    
    <!-- 卡通图标 - 匹配加载页面的居中位置，考虑80dp的marginTop偏移 -->
    <item 
        android:gravity="center"
        android:top="-100dp"
        android:width="280dp"
        android:height="280dp">
        <bitmap
            android:src="@drawable/appicon"
            android:gravity="fill" />
    </item>
    
    <!-- 应用名称 -->
    <item android:gravity="center" android:top="400dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- 副标题 -->
    <item android:gravity="center" android:top="450dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- 应用名称文字 -->
    <item android:gravity="center|bottom" android:bottom="200dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- 底部距离记录文字 -->
    <item android:gravity="bottom|center_horizontal" android:bottom="24dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list> 