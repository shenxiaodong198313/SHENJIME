<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 按压状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/overlay_tool_item_pressed" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/overlay_tool_item_bg" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/overlay_tool_divider" />
        </shape>
    </item>
    
</selector> 